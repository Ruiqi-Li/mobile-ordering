<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/main_filter_layout"
        layout="@layout/main_filter_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/smartmediasoft_color" />

    <sg.com.smartmediasoft.storeclient.ui.PinnedHeaderListView
        android:id="@+id/main_list_listview"
        style="@style/ListViewSmartMediaSoft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:listSelector="#00000000" />

</LinearLayout>